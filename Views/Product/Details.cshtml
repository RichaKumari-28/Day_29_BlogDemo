@model Day29_BlogDemo.Models.Product

<div class="container mt-5">
    <div class="card mx-auto shadow-lg border-0 rounded-4" style="max-width: 600px;">
        <div class="card-body p-4">
            <h1 class="card-title text-center text-primary mb-3 fw-bold">@Model.Name</h1>
            
            <p class="card-text text-muted fs-5 mb-3">@Model.Description</p>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <span class="fw-bold fs-5">Price:</span>
                <span class="badge bg-success fs-5 px-3 py-2">$@Model.Price</span>
            </div>

            <div class="d-grid">
                <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary btn-lg rounded-pill">
                    ‚Üê Back to Products
                </a>
            </div>
        </div>
    </div>
</div>